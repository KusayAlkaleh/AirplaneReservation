@model WebProject.Models.DTO.RegistrationModel;

<div class="container">
	<div class="form-wrap">
		<div class="text-center imgCon">
			<img src="~/assets/register.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
				 width="200px" alt="profile">
		</div>

		<form method="post" asp-action="Register">
			<div class="row">
				<div class="col-md-12">
					<div class="form-group">
						<label asp-for="UserName" class="control-label">User Name (This section is optinal)</label>
						<input asp-for="UserName" type="text" name="username" placeholder="Enter your user name*" class="form-control">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="FirstName" class="control-label">First Name</label>
						<input asp-for="FirstName" type="text" name="firstName" placeholder="Enter your firt name*" class="form-control">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="LastName">Last Name</label>
						<input asp-for="LastName" type="text" name="lastName" placeholder="Enter your last name*" class="form-control">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Email" >Email</label>
						<input asp-for="Email" type="email" class="form-control" placeholder="Enter your email*">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="PhoneNumber" >Phone Number</label>
						<input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Enter your Number*">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="BirthDay" >Birth Day</label>
						<input asp-for="BirthDay" type="date" class="form-control" placeholder="Enter your birth day*">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Password" >Password</label>
						<input asp-for="Password" type="password" class="form-control" placeholder="Enter your password*">
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Gender" >Select your Gender</label>
						<select asp-for="Gender" class="form-select">
							<option selected>Select</option>
							<option value="0">Unknown</option>
							<option value="1">Male</option>
							<option value="2">Female</option>
						</select>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="ClassType" >Select your Class type</label>
						<select asp-for="ClassType" class="form-select">
							<option selected>Select</option>
							<option value="0">Economy</option>
							<option value="1">Business</option>
							<option value="2">First</option>
						</select>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<div class="custom-control custom-radio custom-control-inline ps-2">
							<input type="checkbox" class="custom-control-input">
							<label class="custom-control-label" for="customRadioInline1">
								I agree all statements in <span class="text-primary">Terms of service</span>
							</label>
						</div>
					</div>
				</div>
			</div>
			<div class="row d-flex align-items-center justify-content-end">
				<div class="col-md-4 d-flex justify-content-end">
					<input type="reset" class="btn btn-outline-secondary" value="Reset"/>
					<input type="submit" class="btn btn-primary ms-2" style="width: 100%; background-color: #ff3150; color: white; border: none" value="Create Account" />
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
