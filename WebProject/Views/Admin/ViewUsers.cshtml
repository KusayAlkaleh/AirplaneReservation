                                }
                                else if (user.Gender == 2)
                                {
                                    gender = "Female";
                                }
                                else
                                {
                                    gender = "Unknown";
                                }

                                // generate Password with hidden
                                string pass = user.PasswordHash.Substring(0, 7);

                                int charsToMask = Math.Max(0, pass.Length - 3);

                                string newPassword = new string('*', charsToMask) + pass.Substring(charsToMask);

                                // set a class type of user
                                string classType = "", newColor = "";
                                if (user.ClassType == 0)
                                {
                                    classType = "Economy";
                                    newColor = "#5DADE2";

                                }
                                else if (user.ClassType == 1)
                                {
                                    classType = "Business";
                                    newColor = "#2ECC71";
                                    
