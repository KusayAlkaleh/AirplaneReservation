                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src=@user.ProfileImg class="avatar sm rounded-pill me-3 flex-shrink-0" alt="Customer">
                                            <div>
                                                <div class="h6 mb-0 lh-1">@user.FirstName @user.LastName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td> 
                                        <span class="d-inline-block align-middle">@gender</span>
                                    </td>
                                    <td>
                                        <span>@newPassword</span>
                                    </td>
                                    <td style="color: @newColor; font-weight: bold;">@classType</td>
